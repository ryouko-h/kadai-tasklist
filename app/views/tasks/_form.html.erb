<div class="row">
  <div class="col-xs-6">

<%= form_for(task) do |f| %>

<% if task.errors.any? %>

    <div id="error_explanation">
       <h2>
          <%= pluralize(task.errors.count, "error") %>
          prohibited this task from being saved:</h2>
          
      <ul>
          <% task.errors.full_messages.each do |task| %>

        <li>
          <%= task %>
        </li>
        
        <% end %>
      </ul>
    </div>
  
  <% end %>
    
    <div class="container">
    <div class="row">
        <div class="col-xs-12">
            <div class="row">
                <div class="col-sm-offset-2 col-sm-8"></div>
                  <div class="row">
                    <div class="col-md-offset-2 col-md-8"></div>
                      <div class="row">
                        <div class="col-lg-offset-3 col-lg-6"></div>  
                      </div>
                  </div>
            </div>
        </div>
    </div>
</div>
  
  <div class="form-group">
    <%= f.label :title, 'タイトル' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :content, 'タスク' %>
    <%= f.text_field :content, class: 'form-control' %>
  </div>
  
  <%= f.submit '投稿' %>

  <% end %>

  </div>
</div>
